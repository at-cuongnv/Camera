<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnFlash"
        android:layout_width="@dimen/activity_camera_wight_margin"
        android:layout_height="@dimen/activity_camera_height_margin"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_camera_margin"
        android:layout_marginRight="@dimen/activity_camera_margin"
        android:layout_marginTop="@dimen/activity_camera_margin"
        android:background="@drawable/ic_camera_off" />

    <Button
        android:id="@+id/btnSwapCamera"
        android:layout_width="@dimen/activity_camera_wight_margin"
        android:layout_height="@dimen/activity_camera_height_margin"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_camera_margin"
        android:layout_marginRight="@dimen/activity_camera_margin"
        android:layout_marginTop="@dimen/activity_camera_margin"
        android:background="@drawable/ic_swap_camera" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_camera_height_view"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark">

        <Button
            android:id="@+id/btnTakeImage"
            android:layout_width="@dimen/activity_camera_wight_margin"
            android:layout_height="@dimen/activity_camera_height_margin"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_take_image" />
    </RelativeLayout>


</RelativeLayout>